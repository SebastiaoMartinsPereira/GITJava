package br.com.npsoftwares.jdbc.teste;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.Calendar;

import br.com.npsoftwares.jdbc.ConnectionFactory;

public class TestConnection {

	public static void main(String[] args) {
		
		Connection conn;
		
		conn = ConnectionFactory.openConn("localhost", "1433", "JDBCTEST", "sa", "NPS300892");
	
		testeConn(conn);
		
		testInsert(conn, "nome", "email", "endereco", "dataNascimento");
		
	}
	
	
	private static void testeConn(Connection conn)
	{
		try {
			
			if(!conn.isClosed())
			{
				System.out.println("Yes!!!");
			}
			
			conn.close();
			
			if(conn.isClosed())
			{
			   System.out.println("Fechou");	
			}
			
		} catch (SQLException e) {
			
			e.printStackTrace();
		}
	}
	
	private static void testInsert(Connection conn,String nome,String email,String endereco,String dataNascimento)
	{
		java.sql.Date dataForRecord = new java.sql.Date(Calendar.getInstance().getTimeInMillis());
		
	     StringBuilder sbQuery = new StringBuilder();
	     sbQuery.append("INSERT INTO tb0001_Contatos (");
	     sbQuery.append("nomeCONTATO,emailCONTATO,enderecoCONTATO,dataNascimentoCONTATO)");
	     sbQuery.append("values(?,?,?,?)");
	     PreparedStatement stmt = conn.prepareStatement(sbQuery.toString());
	     stmt.setString(1, "Caelum");
	     stmt.setString(2, "contato@caelum.com.br");
	     stmt.setString(3, "R.vergueiro 3185 cj27");
	     stmt.setDate(4,dataForRecord);
	     stmt.execute();
	     
	     String test = sbQuery.toString();
	}

}
