
public class Carta {

	private tipoNaipe naipe;
	private  tipoFace face;
	
	
	public Carta(tipoNaipe naipe, tipoFace face){
		this.setNaipe(naipe);
		this.setFace(face);
	}
	
	
	public String toString(){
		
		return String.format(" %s de %s", this.getFace().getDescricao(),this.getNaipe().getDescricao());
			
	}
	
	
	public tipoNaipe getNaipe() {
		return naipe;
	}

	public void setNaipe(tipoNaipe naipe) {
		this.naipe = naipe;
	}

	public tipoFace getFace() {
		return face;
	}

	public void setFace(tipoFace face) {
		this.face = face;
	}
	
	
}
