package br.com.impacta.modelos;

public class Programador extends Funcionario{

	public Programador(String nome,String departamento,double salario,Data dataEntrada,String rg){
		super(nome, departamento, salario, dataEntrada, rg);
	}
	
	
	@Override
	public void bonifica(Double value) {
		try {
			
			if(value < 0.){
			    throw new IllegalArgumentException("Valor informado deve ser positivo.\n\n");	
			   
			}else
				 super.bonifica(value);
			    			
		} catch (IllegalArgumentException e) {
			
			System.err.print(e.getMessage());
			Math.abs(value);
			super.bonifica(value);
			System.out.printf("Mas eu sou o programador e transformei meu valor em positivo \n e também multipliquei este valor é agora eu tenho %10.2f a mais em minha conta.\n\n",value*2 );
		}
	}
	
}
