import java.util.Scanner;


public class BlackJack {
	
	private static Baralho baralho;
	private static Cliente cliente;
	private static Banca banca;
	
	
	public static void main(String[]args){
		
		jogar();
		
	}
	
	
	public static void jogar(){
		
		baralho = new Baralho();
		cliente = new Cliente();
		banca = new Banca();
	
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Deseja Inciar a Partida 1-Sim / 2-Não?");
		
		System.out.println("Valores iniciais da pontuação:\n\n\n");
		System.out.println("Cliente :"+cliente.mostraPontos());
		System.out.println("Banca :" + banca.mostraPontos());
		
		for (int i = 0; i < baralho.getCartasNoBaralho().size(); i++) {
			
			System.out.println(baralho.getCartasNoBaralho().get(i));
		}
		
	}
}
