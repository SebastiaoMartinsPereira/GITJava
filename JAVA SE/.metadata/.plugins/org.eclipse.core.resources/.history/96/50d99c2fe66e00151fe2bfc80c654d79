
public class BlackJack {
	
	private static Baralho baralho;
	private static Cliente cliente;
	private static Banca banca;
	
	
	public static void main(String[]args){
		
		jogar();
		
	}
	
	
	public static void jogar(){
		
		baralho = new Baralho();
		cliente = new Cliente();
		banca = new Banca();
		
		System.out.println(cliente.mostraPontos());
		System.out.println(banca.mostraPontos());
		
		for (int i = 0; i < baralho.getCartasNoBaralho().size(); i++) {
			
			System.out.println(baralho.getCartasNoBaralho().get(i));
		}
		
	}
}
